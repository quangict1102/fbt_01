<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="app.model">
	<class name="User" table="users" catalog="db_bookingtour"
		optimistic-lock="version">
		<id name="id" type="int">
			<column name="id" />
			<generator class="identity" />
		</id>
		<property name="fullName" type="string">
			<column name="fullName" length="225" not-null="true" />
		</property>
		<property name="gender" type="int">
			<column name="gender" not-null="true" />
		</property>
		<property name="address" type="string">
			<column name="address" length="225" not-null="true" />
		</property>
		<property name="email" type="string">
			<column name="email" length="225" not-null="true" unique="true" />
		</property>
		<property name="phoneNumber" type="string">
			<column name="phoneNumber" length="20" not-null="true" />
		</property>
		<property name="password" type="string">
			<column name="password" length="225" not-null="true" />
		</property>
		<property name="role" type="string">
			<column name="role" length="6" />
		</property>
		<list name="commentses" table="comments" inverse="true" 
			fetch="select">
			<key>
				<column name="userId" not-null="true" />
			</key>
			<list-index column="id" />
			<one-to-many class="Comment" />
		</list>
		<list name="ratingses" table="ratings" inverse="true" 
			fetch="select">
			<key>
				<column name="user_id" not-null="true" />
			</key>
			<list-index column="id" />
			<one-to-many class="Rating" />
		</list>
		<list name="booktourses" table="booktours" inverse="true" 
			fetch="select">
			<key>
				<column name="userId" not-null="true" />
			</key>
			<list-index column="id" />
			<one-to-many class="Booktour" />
		</list>
	</class>
</hibernate-mapping>